{
    "name": "vitexsoftware/abraflexi-digest",
    "description": "Periodical AbraFlexi digest.",
    "version": "dev-main",
    "authors": [
        {
            "name": "Vitex",
            "email": "info@vitexsoftware.cz"
        }
    ],
    "minimum-stability": "dev",
    "type": "project",
    "require": {
        "vitexsoftware/ease-bootstrap5-widgets-abraflexi": "* 9999999-dev",
        "vitexsoftware/ease-bootstrap5-widgets": "* 9999999-dev",
        "vitexsoftware/abraflexi-bricks": "^1.1",
        "pear/net_smtp": "^1.12",
        "vitexsoftware/ease-core-bricks": "^1.2",
        "vitexsoftware/ease-html-widgets": "^1.1"
